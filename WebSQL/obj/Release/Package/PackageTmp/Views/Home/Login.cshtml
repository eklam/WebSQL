@model WebSQL.Models.LoginModel


<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>SQL Login</h3>
  </div>
  <div class="modal-body">
    <p>Login Info:</p>

    <label for="txtServer">Server:</label><input type="text" id="txtServer" value="@Model.Server" />
    <label for="txtUser">User:</label><input type="text" id="txtUser" value="@Model.UserName" />
    <label for="txtPassword">Password:</label><input type="password" id="txtPassword"  />

     <div style="font-size: 20px;">This server's IP is: @Model.HostedServerIP</div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" onclick="HideModal();">Cancel</a>
    <a href="#" class="btn btn-primary" onclick="DoLogin();" id="btnLogin">Login</a>
  </div>
</div>

<script type="text/javascript">
    function DoLogin() {
        var server = $('#txtServer').val();
        var user = $('#txtUser').val();
        var password = $('#txtPassword').val();
        Login(server, user, password);
    }

    function HideModal() {
        $('#myModal').modal('hide');
    }

    $(document).ready(function () {
        $('#txtServer').focus();
    });
</script>